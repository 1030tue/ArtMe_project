</div>



<h2>Featured Arts</h2>
<% @arts.each do |a|%>
<div class="column">
    <div class="flip-card">
        <div class="flip-card-inner">
            <div class="flip-card-front">
              <%= image_tag(a.img_url, :size => "200x200") %>
