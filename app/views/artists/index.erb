<h1>Artists </h1>
<% @artists.each do |artist| %>
<div class="column">
  <div class="row">
    <div class="flip-card">
        <div class="flip-card-inner">
          <div class="flip-card-front">
          <%= image_tag artist.pro_pic_url%>
          </div>
          <div class="flip-card-back">
            <h3><%=link_to artist.fullname, artist_path(artist.id) %></h3>
            <p>Making the world a better palce ...</p>
          </div>
        </div>
      </div>
    </div>
    <% end %>
</div>
