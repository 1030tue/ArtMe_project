<!DOCTYPE html>
<html>
  <head>
    <title>Artme</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1> ***ArtMe***</h1>
    <%= link_to "Home", '/' %>
    <%= link_to "About", '/about' %>
    <%= link_to "Artists", '/artists' %>
    <%= link_to "Arts", arts_path %>

    <% if !current_client && !current_artist %>
      <%= link_to "Log In", '/login', method: "get" %>
    <%elsif current_artist%>
    <%= link_to "Log Out", '/logout/artist', method: "delete" %>
    <%elsif current_client%>
    <%= link_to "Cart", '/ordered_arts' %>(<%= cart.length %>)
      <%= link_to "Log Out", '/logout', method: "delete" %>
    <% end %>








    <br>
    <h3><%= flash[:notice] %></h3>

    <%= yield %>
  </body>
</html>
