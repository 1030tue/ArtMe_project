<div class="search">
  <%=form_tag(arts_path, method: :get) do%>
  <%=text_field_tag(:search,params[:search])%>
  <div class="">
  <%=submit_tag ("Search")%>
  </div>
  <%end%>
</div>
<div class="notice">
<%= flash[:notice]%>
</div>

<h2>Arts List</h2>
<% @arts.each do |a|%>
<div class="card">
  <%= image_tag(a.img_url, :size => "200x200") %>
  <br><%=link_to a.title, a %></br>
  <br><%= link_to a.artist.fullname, artist_path(a.artist.id) %></br>
  <br>$ <%= a.price %></br>
</div>
  <%end%>
