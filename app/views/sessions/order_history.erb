<style>
table {
  border: 1px solid black;
  width: 50%;
  border-radius: 5px;
}

th, td {
  padding: 8px;
  text-align: left;
}

tr:hover {background-color:#f5f5f5;}

input[type=button], input[type=submit], input[type=reset] {
background-color: #015C78;
border: none;
color: white;
padding: 13px 30px;
margin: 4px 2px;
cursor: pointer;
font-size: 15px;
border-radius: 5px;
}
div.cartbutton {
margin-right: 310px;
}
h1 {
margin-left: 310px;
}

</style>

<h1>Order History</h1>
<table style="background-color:white", align="center">
  <tr>
    <th>order number</th>
    <th>order date</th>
    <th>ordered art</th>
    <th>artist</th>
  </tr>

    <% current_client.ordered_arts.each do |a|%>
    <tr>
    <td> <%= a.id%> </td>
    <td> <%= a.created_at.strftime('%a, %B %d, %Y')%> </td>
    <td> <%= Art.find_by(id: a.art_id).title %> </td>
    <td> <%= Art.find_by(id: a.art_id).artist.fullname %> </td>
    </tr>
  <%end%>

</table>
