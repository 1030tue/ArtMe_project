
<h1>Login</h1>

<h4><%= flash[:notice] %></h4>

<!-- form will POST to ‘/login’ -->
<%= form_tag(login_path) do %>
 <%= label_tag :email %>
 <%= text_field_tag :email %>
<br>
 <%= label_tag :password %>
 <%= password_field_tag :password %>
<br>
 <%= submit_tag 'Login' %>
 <br>
 <%= link_to "Sign Up", new_client_path %>
<% end %>
